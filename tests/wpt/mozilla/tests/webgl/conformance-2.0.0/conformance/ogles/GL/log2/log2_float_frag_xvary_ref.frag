#ifdef GL_ES
precision mediump float;
#endif
varying vec4 color;
const float ln2 = 0.69314718055994530941723212145818;



void main (void)
{
	float x = 31.0 * color.r + 1.0;
	float y = 0.0;
	float z;   // x-1 / x+1
	int n = 50;

	// ln(x) = 2[x-1 + 1 (x-1)^3 + 1 (x-1)^5 + ...] for x > 0
	//          [x+1   3 (x+1)     5 (x+1)        ]
	z = (x - 1.0) / (x + 1.0);
	float p = z;
	for(int i = 1; i <= 101; i += 2)
	{
		y += p / float(i);
		p *= z * z;
	}
	y *= 2.0 / ln2;

	gl_FragColor = vec4(y / 5.0, 0.0, 0.0, 1.0);
}
