<meta name="flags" content="paged" />
<meta name="assert" content="The 'size' value only applies to the page context."/>
<style type="text/css">
	@page { 
		margin: 1cm;
	}
	
	html, body, div { 
		margin: 0;
	}
	
	div {
		width: 2in;
		border-bottom: medium solid black;
		size: 8in 4in;
	}
	p {
		size: 2in;
	}
	span {
		color: gray;
	}
	
</style>
