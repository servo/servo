          "source_scheme": "https",
          "source_context_list": "*",
          "delivery_type": "*",
          "delivery_value": null,
          "redirection": "*",
          "origin": [
            "same-http",
            "cross-http"
          ],
          "subresource": "*",
          "expectation": "omitted"
