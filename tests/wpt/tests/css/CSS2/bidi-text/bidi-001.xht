  <style type="text/css">
   .test { border: solid; padding: 0.4em 1em; line-height: 3em; color: blue; }
   .control { line-height: 3em; color: blue; }
   .control.a { border-style: solid none solid solid; padding: 0.4em 0 0.4em 1em;  }
