  <script type="text/javascript">
   function doit() {
     var target = document.getElementById("target");
     target.parentNode.removeChild(target);
   }
  </script>
  <style type="text/css">
   body &gt; span { border: 3px solid blue }
  </style>
 </head>

 <body onload="doit()">
   <span>
    One
    <div>Two</div><span id="target">Three</span></span>


