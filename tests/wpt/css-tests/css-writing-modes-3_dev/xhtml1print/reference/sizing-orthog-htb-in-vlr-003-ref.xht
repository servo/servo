  <style type="text/css"><![CDATA[
  body
    {
      font-size: 16px;
      line-height: 1.25; /* therefore, each line box is 20px tall */
      margin: 8px 0px;
    }

  table
    {
      border-spacing: 0px;
      left: 0px;
      padding: 0px 84px;
      position: absolute;
      width: calc(136px + 3px + 15ch + 3px + 136px);
    }

  td
    {
      padding: 0px;
      vertical-align: top;
    }

  td#after, td#before
    {
      width: 52px;
    }

  p#sentence-after, p#sentence-before
    {
      writing-mode: vertical-lr;
    }

  td#data
    {
      border: blue solid 3px;
      display: block;
      width: 15ch;
    }
  ]]></style>
 </head>

 <body>

  <table>

    <tr>

      <td id="before"><p id="sentence-before">Sentence&nbsp;before.</p></td>

      <td id="data">123456789012345</td>

      <td id="after"><p id="sentence-after">Sentence&nbsp;after.</p></td>

    </tr>

  </table>

 </body>
