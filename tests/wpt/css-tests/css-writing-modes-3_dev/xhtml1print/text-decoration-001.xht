    <meta content="Test passes if text decoration applies to the composed character but each character inside tate-chu-yoko." name="assert" />
    <meta charset="utf-8" />
    <style type="text/css">
        @font-face {
            font-family: 'tcu-font';
            src: url('../support/tcu-font.woff');
        }

        .tcu-with-decoration {
            font-family: 'tcu-font';
            writing-mode: vertical-rl;
            text-combine-upright: all;
            text-decoration: underline;
