    <style type="text/css">
            .box {
                width: 200px;
                height: 200px;
                position: relative;
            }
            .box div {
                position: absolute;
            }
            #div1 {
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: green;
            }
    </style>
