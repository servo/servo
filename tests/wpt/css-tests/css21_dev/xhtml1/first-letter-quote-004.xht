<body>
  <div><span></span></div>
  <script type="text/javascript">
    document.body.offsetWidth;
    document.getElementsByTagName("span")[0].
      appendChild(document.createTextNode('"'));
    document.getElementsByTagName("span")[0].
      appendChild(document.createTextNode('This is text"'));
  </script>


