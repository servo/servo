        <meta name="flags" content="" />
        <meta name="assert" content="The 'border-color' property with two color values is supported and applied to the correct sides of the box." />
        <style type="text/css">
            div
            {
                border-color: blue green;
                border-style: solid;
                border-width: 10px;
                height: 1in;
            }
        </style>
