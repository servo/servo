  <meta name="assert" content="The computed width is inherited, even if the         'width' property does not apply."/>
  <style type="text/css">
    .outer {
      width: 9.375em; /* 150px */
    }
    .inner {
      display: block;
      width: inherit;
      height: 1.875em; /* 30px */
      background: orange;
    }
    .control {
      width: 9.375em;
      height: 1.875em;
      background: blue;
    }
  </style>
