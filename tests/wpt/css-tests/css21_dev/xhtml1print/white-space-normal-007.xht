  <style type="text/css">
   /* setup */
   * { white-space: normal; font: inherit; }
   strong {font-weight: bold;}
   div { display: block; margin: 1em; }
   span { display: inline; }

   /* test */
   div { font: 20px/1 Ahem; }
   .green { background: lime; color: green; }
   .red { background: red; color: maroon; }
